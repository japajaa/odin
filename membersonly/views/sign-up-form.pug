extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text' placeholder='Last name' name='last_name' required='true' value=(undefined===user ? '' : user.last_name))
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='user@email.com' name='username' required='true' value=(undefined===user ? '' : user.username))
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='secret password' name='password' required='true' value='')
      label(for='confirmpassword') Confirm password:
      input#confirmpassword.form-control(type='password' placeholder='confirm password' name='confirmpassword' required='true' value='')
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg