extends layout

block content
  h4=title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text' placeholder='title for message' name='title' required='true' value=(undefined===message ? '' : message.title))
      label(for='text') Text:
      input#text.form-control(type='text' placeholder='message text' name='text' required='true' value=(undefined===message ? '' : message.text))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg